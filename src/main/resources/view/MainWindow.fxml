<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0"
            style="-fx-background-color: #F2F2F7;"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pazuzu.ui.controller.MainWindow">
    <children>
        <!-- Input Container -->
        <HBox fx:id="inputContainer" 
              layoutY="550.0"
              prefHeight="50.0" 
              prefWidth="400.0"
              spacing="8.0"
              style="-fx-background-color: #FFFFFF; -fx-border-color: #E5E5EA; -fx-border-width: 1 0 0 0; -fx-padding: 8;"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0">
            <children>
                <TextField fx:id="userInput"
                           onAction="#handleUserInput"
                           prefHeight="34.0"
                           promptText="Type a message..."
                           style="-fx-background-color: #F2F2F7; -fx-background-radius: 17; -fx-border-radius: 17; -fx-padding: 8 12 8 12; -fx-font-size: 14px; -fx-font-family: 'Segoe UI', 'Arial', sans-serif; -fx-border-color: transparent; -fx-focus-color: #007AFF; -fx-faint-focus-color: transparent;"
                           HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton"
                        mnemonicParsing="false"
                        onAction="#handleUserInput"
                        prefHeight="34.0"
                        prefWidth="34.0"
                        style="-fx-background-color: #007AFF; -fx-background-radius: 17; -fx-border-radius: 17; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-color: transparent; -fx-cursor: hand;"
                        text="â†’" />
            </children>
        </HBox>
        
        <!-- Chat Area -->
        <ScrollPane fx:id="scrollPane"
                    hbarPolicy="NEVER"
                    hvalue="1.0"
                    prefHeight="550.0"
                    prefWidth="400.0"
                    style="-fx-background-color: #F2F2F7; -fx-background: #F2F2F7; -fx-border-color: transparent;"
                    vvalue="1.0"
                    AnchorPane.bottomAnchor="50.0"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0">
            <content>
                <VBox fx:id="dialogContainer"
                      prefWidth="388.0" 
                      style="-fx-background-color: #F2F2F7;"
                      spacing="4.0">
                    <padding>
                        <Insets top="10.0" bottom="10.0" left="5.0" right="5.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>

